<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.dcs</groupId>
    <artifactId>org.dcs.swagger</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>org.dcs.swagger</name>

    <properties>

        <project.source.version>1.8</project.source.version>
        <project.target.version>1.8</project.target.version>
        <jetty-version>9.2.9.v20150224</jetty-version>
        <slf4j-version>1.6.3</slf4j-version>
        <junit-version>4.8.1</junit-version>
        <jersey-version>1.18.1</jersey-version>
        <swagger-core-version>1.5.4</swagger-core-version>
        <dcs.api.path>${basedir}/org.dcs.api/src/main/java/org/dcs/api/service</dcs.api.path>
        <dcs.api.impl.path>${basedir}/org.dcs.core/src/main/java/org/dcs/api/service/impl</dcs.api.impl.path>
        <dcs.rest.api.path>${basedir}/org.dcs.web/src/main/java/org/dcs/api/</dcs.rest.api.path>
    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.0</version>
                <configuration>
                    <encoding>${project.encoding}</encoding>
                    <source>${project.source.version}</source>
                    <target>${project.target.version}</target>
                </configuration>
            </plugin>
        </plugins>


    </build>
    <profiles>
        <profile>
            <id>swagger-gen</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-clean-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <excludeDefaultDirectories>true</excludeDefaultDirectories>
                                    <filesets>
                                        <fileset>
                                            <directory>${dcs.api.path}</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${dcs.rest.api.path}</directory>
                                        </fileset>
                                        <fileset>
                                            <directory>${project.build.directory}/generated-sources/swagger</directory>
                                        </fileset>
                                    </filesets>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>io.swagger</groupId>
                        <artifactId>swagger-codegen-maven-plugin</artifactId>
                        <version>2.1.5</version>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <inputSpec>${basedir}/config/swagger/dcs-swagger.yaml</inputSpec>
                                    <language>jaxrs</language>
                                    <templateDirectory>${basedir}/config/swagger/template</templateDirectory>
                                    <configOptions>
                                        <sourceFolder>src/main/java</sourceFolder>
                                        <apiPackage>org.dcs.api</apiPackage>
                                        <modelPackage>org.dcs.api.model</modelPackage>
                                        <groupId>${project.groupId}</groupId>
                                        <artifactId>${project.artifactId}</artifactId>
                                        <artifactVersion>${project.version}</artifactVersion>
                                    </configOptions>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.7</version>
                        <executions>
                            <execution>
                                <id>copy-swagger-api</id>
                                <!-- here the phase you need -->
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${dcs.api.path}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.build.directory}/generated-sources/swagger/src/main/java/org/dcs/api</directory>
                                            <includes>
                                                <include>*Message.java</include>
                                                <include>*Exception.java</include>
                                                <include>*Service.java</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-swagger-impl</id>
                                <!-- here the phase you need -->
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${dcs.api.impl.path}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.build.directory}/generated-sources/swagger/src/main/java/org/dcs/api/impl</directory>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-swagger-rest</id>
                                <!-- here the phase you need -->
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${dcs.rest.api.path}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.build.directory}/generated-sources/swagger/src/main/java/org/dcs/api</directory>
                                            <excludes>
                                                <exclude>*Message.java</exclude>
                                                <exclude>*Exception.java</exclude>
                                                <exclude>**/*Service.java</exclude>
                                                <exclude>**/*Impl.java</exclude>
                                            </excludes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
